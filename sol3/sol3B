/**
 * מנסה למשוך סכום כסף מהחשבון.
 * הפעולה בודקת אם החשבון פעיל (isActive) וגם אם יש מספיק יתרה למשיכה (balance >= amount).
 * אם כן, היא מפחיתה את הסכום מהיתרה ומחזירה true.
 * אחרת, תחזיר false.
 *
 * @param amount הסכום למשיכה.
 * @return true אם המשיכה הצליחה, false אחרת.
 */
public boolean withdraw(double amount) {
    // ודא שהסכום למשיכה חיובי
    if (amount <= 0) {
        System.out.println("שגיאה: סכום המשיכה חייב להיות חיובי.");
        return false;
    }
    // ודא שהחשבון פעיל
    if (!isActive) {
        System.out.println("שגיאה: החשבון אינו פעיל.");
        return false;
    }
    // ודא שיש מספיק יתרה
    if (this.balance >= amount) {
        this.balance -= amount;
        System.out.println("משיכה של " + amount + " ש\"ח בוצעה בהצלחה. יתרה חדשה: " + this.balance);
        return true;
    } else {
        System.out.println("שגיאה: יתרה לא מספקת (" + this.balance + ") למשיכה של " + amount + " ש\"ח.");
        return false;
    }
}
