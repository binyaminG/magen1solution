/**
 * א. פונקציה המקבלת מערך של מספרים שלמים arr ומספר שלם targetSum.
 * הפעולה תחזיר את כמות הזוגות של איברים במערך
 * שסכומם שווה ל-targetSum.
 *
 * @param arr מערך המספרים השלמים.
 * @param targetSum סכום היעד.
 * @return כמות הזוגות שסכומם שווה ל-targetSum.
 */
public static int countPairsWithSum(int[] arr, int targetSum) {
    if (arr == null || arr.length < 2) {
        return 0; // אין מספיק איברים ליצירת זוגות
    }

    int count = 0;
    for (int i=0;i< arr.length; i++) {
        for (int j = i+1; j < arr.length; j++) {
            if (arr[i]+arr[j]==targetSum)
                count++;
        }
    }
    return count;
}
